<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinner_departure_stops"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_element" />

        <Spinner
            android:id="@+id/spinner_destination_stops"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_element" />

        <TextView
            android:id="@+id/view_day_chooser"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_element"
            android:text="Сегодня" />

        <Button
            android:id="@+id/button_find"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_element"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:text="@string/text_find" />

        <com.example.busschedule.TripRecyclerView
            android:id="@+id/trips_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>